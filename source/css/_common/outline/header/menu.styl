// Menu
// --------------------------------------------------
.menu {
  margin: 0;
  padding: 1em 0;
  text-align: center;
}

.menu-item {
  display: inline-block;
  list-style: none;
  margin: 0 10px;

  +mobile() {
    display: block;
    margin-top: 10px;

    &.menu-item-search {
      display: none;
    }
  }

  a {
    border-bottom: 0;
    display: block;
    font-size: $font-size-smaller;
    transition: border-color $transition-ease;

    &:hover, &.menu-item-active {
      background: var(--menu-item-bg-color);
    }
  }

  i[class^='fa'] {
    margin-right: 8px;
  }

  .badge {
    badge();
  }
}

if (hexo-config('motion.transition.menu_item')) {
  .use-motion .menu-item {
    visibility: hidden;
  }
}
